<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#BD0603"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
     tools:context="dp.com.medtime.SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/signUp"
        android:layout_alignEnd="@+id/signUp"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">
            >

        <EditText
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:textColor="#F5F2D6"
            android:textSize="25dp"

            android:layout_height="wrap_content"
            android:text="Enter username"
            android:gravity="center"
            android:id="@+id/username"
            android:layout_gravity="center"
             />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:alpha="0.80"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">>
        <EditText
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="#F5F2D6"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:gravity="center"
            android:id="@+id/password"
            android:layout_gravity="center"
             />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:alpha="0.80"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">>
        <EditText
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="#F5F2D6"

            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:gravity="center"
            android:id="@+id/confirmPassword"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="20dp"

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">>
        <EditText
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:text="Enter email ID"
            android:alpha=".80"
            android:textColor="#F5F2D6"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/email"
            android:layout_gravity="center"
            />
        </android.support.v7.widget.CardView>
    </LinearLayout>
   <!-- <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">>-->

    <info.hoang8f.widget.FButton

        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Sign Up"
        android:textSize="35sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="#027008"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        fbutton:cornerRadius="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />
   <!-- </android.support.v7.widget.CardView>-->


</RelativeLayout>
