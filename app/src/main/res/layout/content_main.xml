<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <info.hoang8f.widget.FButton
        android:id="@+id/mainLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Login"
        android:textSize="50sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="@color/buttonShadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_alignBaseline="@+id/mainSkip"
        android:layout_alignBottom="@+id/mainSkip"
        android:layout_centerHorizontal="true" />
    <info.hoang8f.widget.FButton
        android:id="@+id/mainSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Skip"
        android:textSize="50sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="@color/buttonShadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <info.hoang8f.widget.FButton
        android:id="@+id/mainSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Sign Up"
        android:textSize="50sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="@color/buttonShadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" />
