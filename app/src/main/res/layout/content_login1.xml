<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context="dp.com.medtime.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User Name:"
            android:textSize="20sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="62dp" />-->
        <EditText
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter user name"
            android:gravity="center"
            android:id="@+id/logUsername"
            android:layout_gravity="center"
            />
        <EditText
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:gravity="center"
            android:id="@+id/logPassword"
            android:layout_gravity="center"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/logLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Login"
            android:textSize="50sp"
            android:layout_gravity="center"
            fbutton:buttonColor="@color/button"
            fbutton:shadowColor="@color/buttonShadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="10dp"

             />


    </LinearLayout>


</RelativeLayout>
