<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#BD0306"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"

    android:paddingTop="150dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dp.com.medtime.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">>
        <EditText
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter user name"
            android:textColor="#F5F2D6"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/logUsername"
            android:layout_gravity="center"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            card_view:cardBackgroundColor="#BD0306"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="25dp">
        >
        <EditText
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:textColor="#F5F2D6"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/logPassword" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <!--<android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">-->

    <info.hoang8f.widget.FButton
        android:id="@+id/logLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Login"
        android:textSize="40sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="#027008"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        fbutton:cornerRadius="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"

        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />
   <!-- </android.support.v7.widget.CardView>-->


</RelativeLayout>
