<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_set_alarm" tools:context="dp.com.medtime.SetAlarmActivity">
    <EditText
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter medicine name"
        android:gravity="center"
        android:id="@+id/medName"
        android:layout_gravity="center"
        />
    <EditText
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No: of days"
        android:gravity="center"
        android:id="@+id/medDays"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">//make dialog pop up
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/morning"
            android:text="Morning"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afternoon"
            android:text="Afternoon"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night"
            android:id="@+id/night"/>
    </LinearLayout>
    <EditText
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/medInstructions"
        android:gravity="center"
        android:layout_gravity="center"
        />


    <info.hoang8f.widget.FButton
        android:layout_marginTop="30dp"
        android:id="@+id/setAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Set Alarm"
        android:textSize="30sp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="@color/buttonShadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        />

</LinearLayout>
