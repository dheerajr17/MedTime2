<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#BD0603"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_set_alarm" tools:context="dp.com.medtime.SetAlarmActivity">
    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp">
    >
    <EditText
        android:textSize="23sp"
        android:textColor="#FFFFFF"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter medicine name"
        android:gravity="center"
        android:id="@+id/medName"
        android:layout_gravity="center"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp">
    >
    <EditText
        android:paddingTop="40dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No: of days (0-30)"
        android:textSize="23sp"
        android:gravity="center"
        android:id="@+id/medDays"
        android:layout_gravity="center"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp">
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textSize="20sp"
                android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/morning"
            android:text="Morning   "/>
            <EditText
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/dosage1"
                android:text=" Enter dosage"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:textSize="20sp"
            android:textColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afternoon"
            android:layout_weight="3"
            android:text="Afternoon"
            android:checked="false" />
            <EditText
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dosage2"
                android:layout_weight="3"
                android:text="Enter dosage"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RadioButton
            android:textSize="20sp"
            android:textColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night        "
            android:layout_weight="3"
            android:id="@+id/night"/>
                <EditText
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dosage3"
                    android:layout_weight="3"
                    android:text="Enter dosage"/>
            </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        card_view:cardBackgroundColor="#BD0306"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp">
    >
    <EditText
        android:textSize="23sp"
        android:textColor="#FFFFFF"

        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/medInstructions"
        android:gravity="center"
        android:layout_gravity="center"
        />
    </android.support.v7.widget.CardView>


    <info.hoang8f.widget.FButton
        android:layout_marginTop="40dp"
        android:id="@+id/setAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        fbutton:cornerRadius="20dp"
        android:text="Set Alarm"
        android:textSize="30sp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_gravity="center"
        fbutton:buttonColor="@color/button"
        fbutton:shadowColor="#027008"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"

        />

</LinearLayout>
